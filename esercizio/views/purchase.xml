<odoo>
    <data>
        <record id="purchase_order_form_inherit_add_fields" model="ir.ui.view">
            <field name="name">purchase.order.form.add.fields</field>
            <field name="model">purchase.order</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_so"
                            icon="fa-bars">
                        <field string="Sale Count" name="sale_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>

</odoo>
