<odoo>
    <data>
        <record id="account_move_form_inherit_add_fields" model="ir.ui.view">
            <field name="name">account.move.form.add.fields</field>
            <field name="model">account.move</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button"
                    name="action_view_source_sale_orders"
                    type="object"
                    icon="fa-pencil-square-o">
                    <field string="Order" name="sale_order_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</data>
    </odoo>
